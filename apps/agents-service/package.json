{
  "name": "@evergreen/agents-service",
  "version": "0.1.0",
  "description": "Agent orchestration service using Mastra for Evergreen Dragon OS",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@mastra/core": "^0.24.6",
    "@mastra/react": "^0.0.21",
    "@mastra/rag": "^1.3.6",
    "@mastra/mcp": "^0.14.4",
    "@supabase/supabase-js": "^2.86.0",
    "@aws-sdk/client-s3": "^3.943.0",
    "@temporalio/client": "^1.13.2",
    "@evergreen/config": "workspace:*",
    "@evergreen/shared-utils": "workspace:*",
    "@evergreen/supabase-client": "workspace:*",
    "@evergreen/duckdb-kit": "workspace:*",
    "@evergreen/mem0-client": "workspace:*",
    "@evergreen/workflows": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "tsx": "^4.21.0",
    "vitest": "^4.0.15"
  }
}

